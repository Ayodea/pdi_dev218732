    $('api_progress').focus();
    sendemail();
}

function sendemail() {
    var gr = new GlideRecord('sys_user');
    gr.addEncodedQuery('active=true');
    gr.query();
    while (gr.next()) {
        gs.eventQueue('test_saba2', '', '', gr, gr.email);
    }
}]]></client_script>
